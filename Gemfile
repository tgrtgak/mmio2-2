source 'https://rubygems.org'
ruby '2.6.3'

# Web Framework
gem 'sinatra', '~> 2.0.1'
gem 'sinatra-contrib', '~> 2.0.1'

# Static Site Generation
gem 'rackula'

# Syntax Highlighting for Markdown
gem 'rouge'

# Internationalization
gem 'i18n'         # Main localization library
gem 'rails-i18n',  # Rails oriented default localizations

  :require => nil  #  (gives us default time/date localization)

# Markup
gem 'tilt', '~> 2.0.9'      # Templating Engine
gem 'slim', '~> 4.0.0'      # Slim (HTML)
gem 'sassc'                 # Sass (Stylesheets, CSS)
gem 'redcarpet'             # Markdown

# Web server (basic stuff)
gem 'thin'

# Runs Rakefiles
gem 'rake'
