                td.exponent data=i.to_s data-bit-index=(63 - (i + 1)).to_s
                  label
                    input type=:checkbox
                    span role=:presentation aria-hidden=:true
              - 20.times do |i|
                td.mantissa data-bit-index=(63 - (i + 12)).to_s
                  label
                    input type=:checkbox
                    span role=:presentation aria-hidden=:true
            tr
